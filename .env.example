# CodeGuardian - Environment Variables Template
# Copy this file to .env in each service directory and fill in your values

# ==================== REPO SERVICE ====================
# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
PORT=5001

# ==================== AI REVIEW SERVICE ====================
# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
PORT=5002

# Metrics Service URL (for communication)
METRICS_URL=http://localhost:5003/api/metrics
# Notification Service URL
NOTIFICATION_URL=http://localhost:5004/notify

# ==================== METRICS SERVICE ====================
# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=codeguardian_metrics
PORT=5003

# ==================== NOTIFICATION SERVICE ====================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS SNS
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:CodeGuardianNotifications

# AWS S3
S3_BUCKET=codeguardian-reports

# EmailJS Configuration (for email notifications)
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id
EMAILJS_PUBLIC_KEY=your_emailjs_public_key

PORT=5004

# ==================== INSIGHT SERVICE ====================
# Service URLs for aggregation
AI_SERVICE_URL=http://localhost:5002/api
METRICS_URL=http://localhost:5003/api/metrics
REPO_SERVICE_URL=http://localhost:5001/api

PORT=5005

# ==================== AWS RDS (Production) ====================
# For production MySQL on AWS RDS
# DB_HOST=codeguardian-db.xxxxx.us-east-1.rds.amazonaws.com
# DB_PORT=3306
# DB_USER=admin
# DB_PASSWORD=your_secure_rds_password
# DB_NAME=codeguardian_metrics

# ==================== DOCKER COMPOSE ====================
# Used in docker-compose.yml
COMPOSE_PROJECT_NAME=codeguardian
